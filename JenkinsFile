properties([
  parameters([
    [
      $class: 'ChoiceParameter',
      choiceType: 'PT_SINGLE_SELECT',
      name: 'Env',
      script: [
        $class: 'ScriptlerScript',
        scriptlerScriptId:'Env'
      ]
    ],
    [
      $class: 'CascadeChoiceParameter',
      choiceType: 'PT_SINGLE_SELECT',
      name: 'Host',
      referencedParameters: 'Environment',
      script: [
        $class: 'ScriptlerScript',
        scriptlerScriptId:'host',
        parameters: [
          [name:'env', value: '$Env']
        ]
      ]
   ]
 ])
])

pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo "srodowisko: ${params.Env}"
        echo "apkikacja: ${params.Host}"
      }
    }
  }
}
